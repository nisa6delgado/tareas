{
    "name": "nisadelgado/tareas",
    "description": "Gesti√≥n de proyectos y listas de tareas",
    "type": "project",
    "license": "MIT",
    "version": "1.2.11",
    "minimum-stability": "stable",
    "authors": [
        {
            "name": "Nisa Delgado",
            "email": "nisadelgado@gmail.com"
        }
    ],
    "require": {
        "base-php/core": "1.9.53",
        "illuminate/database": "11.34.2",
        "illuminate/pagination": "11.34.2",
        "illuminate/routing": "11.34.2",
        "illuminate/validation": "11.34.2",
        "illuminate/view": "11.34.2",
        "league/flysystem": "3.29.1",
        "league/commonmark": "2.5.3"
    },
    "require-dev": {
        "laravel/pint": "1.18.3",
        "psy/psysh": "0.12.5",
        "spatie/ignition": "1.15.0",
        "pestphp/pest": "3.6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "vendor/base-php/core/bootstrap/autoload.php"
        ]
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "base-php/core",
                "version": "1.9.53",
                "dist": {
                    "url": "https://github.com/base-php/core/archive/refs/heads/main.zip",
                    "type": "zip"
                }
            }
        }
    ],
    "scripts": {
        "pre-install-cmd": [
            "composer clear-cache"
        ],
        "post-install-cmd": [
            "composer dump-autoload --optimize"
        ]
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    }
}
